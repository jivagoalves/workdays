<tr id="task_list_item_<%= task.id %>">
  <td>
    <%= task.description %>
  </td>
  <td>
    <%= render :partial => 'shared/completed_field_form', :locals => { :task => task } %>
  </td>
  <td>
    <%= button_to "Delete", task, :method => :delete, :form_class => "delete_task", :remote => true %>
  </td>
</tr>
