<% if errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(errors.count, "error") %> prohibited this request.
    </h3>
    <p>There were problems with the following fields:</p>
    <ul>
      <% errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>