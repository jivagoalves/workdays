<h1>Home</h1>

<div id="main">
<div id="sign_in" class="section round">
<h2 class="title">Sign in</h2>
<%= render :partial => 'shared/form_errors', :locals => { :errors => @user_session.errors } %>

<%= form_for @user_session, :html => { :class => 'formatted' } do | f | %>
  <p class="field">
    <%= f.label :username, 'User name' %>
    <%= f.text_field :username %>
  </p>
  <p class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p class="actions">
    <%= f.submit "Sign in", :class => 'submit' %>
  </p>
  <p>
    Don't have an account?<br />
    <%= link_to 'Sign up!', signup_path %>
  </p>
<% end %>
</div>
</div>

