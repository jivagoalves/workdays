<h1>Tasks</h1>

<% if @tasks.empty? %>
  <p>No tasks found.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>
          Description
        </th>
        <th>
          Completed
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @tasks %>
    </tbody>
  </table>
<% end %>

<p>
  <%= link_to "New task", new_task_path %>
</p>
